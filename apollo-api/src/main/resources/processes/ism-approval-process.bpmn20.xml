        <sequenceFlow id="flow1" sourceRef="startevent1" targetRef="ism-pvoc-approval"></sequenceFlow>
        <sequenceFlow id="flow2" name="Rejected" sourceRef="exclusivegateway1" targetRef="ism-rejection">
