        <serviceTask id="servicetask1" name="Send Approval Email and Report" activiti:expression="#{ismService.sendIsmReport(ismRequestId)}"></serviceTask>
        <sequenceFlow id="flow7" sourceRef="ism-rejection-email" targetRef="ism-request-completed"></sequenceFlow>
        <serviceTask id="ism-request-completed" name="Process Completed" activiti:expression="#{ismService.completeIsmRequest(ismRequestId)}"></serviceTask>
        <sequenceFlow id="flow8" sourceRef="servicetask1" targetRef="ism-request-completed"></sequenceFlow>
        <endEvent id="ism-application-complete" name="End"></endEvent>
        <sequenceFlow id="flow9" sourceRef="ism-request-completed" targetRef="ism-application-complete"></sequenceFlow>
    </process>
